<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/Textlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/fiest"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="16dp"
                    android:text="새 정보 입력하기"
                    android:textSize="40dp"

                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bike_p"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="right" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="(날짜,시간)"
                android:textSize="23dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="물건 이름"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="2"
                    android:inputType="textPersonName"
                    android:hint="내용을 입력하세요"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="물건 위치"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="2"
                    android:inputType="textPersonName"
                    android:hint="내용을 입력하세요"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="메모"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="2"
                    android:inputType="textPersonName"
                    android:hint="내용을 입력하세요"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bike"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                     />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@drawable/book"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"

                    />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@drawable/laptop"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"

                    />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@drawable/drive"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"

                    />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@drawable/plus"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/add_ok_btn"
                    android:layout_width="108dp"
                    android:layout_height="42dp"
                    android:layout_gravity="right"
                    android:text="확인"
                    android:textSize="16dp"></Button>

                <Button
                    android:id="@+id/add_cancel_btn"
                    android:layout_width="108dp"
                    android:layout_height="42dp"
                    android:layout_gravity="right"
                    android:text="취소"
                    android:textSize="16dp"></Button>
            </LinearLayout>
        </LinearLayout>


            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="물건 추가" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
