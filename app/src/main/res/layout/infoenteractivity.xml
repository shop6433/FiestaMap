<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/Textlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/fiest"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginTop="16dp"
                android:text="새 정보 입력하기"
                android:textSize="40dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_bike"
                android:layout_weight="1"
                android:background="@drawable/bike_p"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dateNow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:text="(현재시간)"
                android:textSize="23dp" />
            <Button
                android:id="@+id/btn_locationNow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="현재위치"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bike"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@drawable/bike"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />

            <Button
                android:id="@+id/btn_book"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@drawable/book"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />

            <Button
                android:id="@+id/btn_laptop"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@drawable/laptop"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />

            <Button
                android:id="@+id/btn_car"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@drawable/drive"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"

                />

            <Button
                android:id="@+id/btn_more"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:background="@drawable/plus"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_objectName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="물건 이름"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_objectName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:inputType="textMultiLine"
                android:hint="내용을 입력하세요"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_objectLocation"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="물건 위치"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_objectLocation"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:inputType="textMultiLine"
                android:hint="내용을 입력하세요"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="메모"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/et_memo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_weight="2"
                android:inputType="textMultiLine"
                android:hint="내용을 입력하세요"
                android:textSize="16dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_add_ok"
                android:layout_width="108dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:text="확인"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_add_cancel"
                android:layout_width="108dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:text="취소"
                android:textSize="16dp"></Button>
        </LinearLayout>
    </LinearLayout>

    />
    />
</LinearLayout>